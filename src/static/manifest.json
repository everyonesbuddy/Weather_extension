{
  "manifest_version": 3,
  "name": "Weather Extension",
  "description": "The simplest and most reliable volume booster.",
  "version": "1.0.0",
  "permissions": ["alarms", "contextMenus", "storage"],
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Extension"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
